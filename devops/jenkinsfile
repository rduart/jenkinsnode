pipeline {
  agent {
    kubernetes {
      yamlFile 'devops/KubernetesPod.yaml'
    }
  }
  environment {
    workingGitURL='https://github.com/rduart/jenkinsnode.git'
    workingBranch='main'
    proxy_http='proxy.cammis.medi-cal.ca.gov:8080'
    proxy_https='proxy.cammis.medi-cal.ca.gov:8080'
  }  
  stages {
    stage ('Prep') {
      steps {
        echo '*************************************************************'
        echo 'before container'
        echo '*************************************************************'
        sh 'env' 
        echo "http_proxy : ${proxy_http}"
        echo "https_proxy : ${proxy_https}"
        }  
    }
    stage('Run maven') {
      steps {
        sh 'set'
        sh "echo OUTSIDE_CONTAINER_ENV_VAR = ${CONTAINER_ENV_VAR}"
        container('maven') {
          sh 'echo MAVEN_CONTAINER_ENV_VAR = ${CONTAINER_ENV_VAR}'
          sh 'mvn -version'
          
          echo '*************************************************************'
          echo 'proxy setup'
          echo '*************************************************************'
          sh 'env'
          echo "http_proxy : ${proxy_http}"
          echo "https_proxy : ${proxy_https}"
          
          sh 'wget https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.5.0.2216-linux.zip'
        }
        container('busybox') {
          sh 'echo BUSYBOX_CONTAINER_ENV_VAR = ${CONTAINER_ENV_VAR}'
          sh '/bin/busybox'
          
          echo '*************************************************************'
          echo 'proxy setup'
          echo '*************************************************************'
          //sh 'env'
          //sh 'env | grep http_proxy'
          //sh 'env | grep https_proxy'
          //sh 'wget https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.5.0.2216-linux.zip'
          
        }
      }
    }
  }
}
